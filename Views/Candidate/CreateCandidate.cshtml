@using Voting_0._2.Models.ViewModels.CreateModels
@model CandidateCreateModel

<form asp-action="CreateCandidate" method="post">
    <div class="form-group">
        <label for="Name">Ім'я кандидата:</label>
        <input type="text" class="form-control" id="Name" name="Name" />
    </div>
    <div class="form-group">
        <label for="Description">Опис кандидата:</label>
        <textarea class="form-control" id="Description" name="Description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Додати кандидата</button>
</form>
