@using Voting_0._2.Data.Entities.Users
@model Account

<h2>Профіль організатора</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Інформація про організатора</h4>

        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Ім'я користувача:</strong> @Model.UserName</p>
        <p><strong>Ім'я користувача:</strong> @Model.FullName</p>

        <a href="@Url.Action("EditAccountOrganizator", "Account")" class="btn btn-primary">Редагувати профіль</a>

        <form asp-action="Logout" method="post" class="mt-3">
            <button type="submit" class="btn btn-danger">Вийти з акаунту</button>
        </form>
    </div>
</div>
