@using Voting_0._2.Models.ViewModels.DetailsModel
@model VotingDetailsModel

<h2>Деталі голосування: @Model.Name</h2>

<p><strong>Тривалість голосування:</strong> @Model.VotingDuration</p>
<p><strong>Ключ доступу:</strong> @Model.AccessKey</p>
<p><strong>Кількість виборців:</strong> @(Model.NumberOfVoters.HasValue ? Model.NumberOfVoters.ToString() : "Необмежено")</p>

<h3>Кандидати</h3>

@foreach (var candidate in Model.Candidates)
{
    <div class="candidate-details">
        <h4>@candidate.Name</h4>
        <p><strong>Опис:</strong> @candidate.Description</p>
        <p><strong>Кількість голосів:</strong> @candidate.VoteCount</p>
        @if (!string.IsNullOrEmpty(candidate.ImageUrl))
        {
            <p><strong>Зображення:</strong></p>
            <img src="@candidate.ImageUrl" alt="@candidate.Name" class="img-thumbnail" width="150" />
        }
    </div>
}